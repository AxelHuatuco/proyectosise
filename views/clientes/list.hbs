<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Clientes</h3>

        <div style="padding: 10px;">
            <!-- BotÃ³n de enlace para agregar nuevo cliente -->
            <a href="/add" class="btn btn-danger">Nuevo Cliente</a>
        </div>

        {{#if clientes}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Nro. DNI</th>
                    <th scope="col">Nro. Telefono</th>
                    <th scope="col">Distritos</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clientes}}
                <tr>
                    <td>{{nomcli}}</td>
                    <td>{{apecli}}</td>
                    <td>{{nrodnicli}}</td>
                    <td>{{telcli}}</td>
                    <td>{{clidit}}</td>

                    <td>
                        <div class="">
                            <!-- Enlace para actualizar -->
                            <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>

                            <!-- Enlace para eliminar -->
                            <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE CLIENTES</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay clientes</h3>
            </div>
            <div class="card-body">
                <p>No hay clientes registrados actualmente.</p>
                
                <a href="/add" class="btn btn-primary">Crear Cliente</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
