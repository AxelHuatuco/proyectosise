<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Empleados</h3>

        <div style="padding: 10px;">
            <!-- BotÃ³n de enlace para agregar nuevo empleado -->
            <a href="/add1/" class="btn btn-danger">Nuevo Empleado</a>
        </div>

        {{#if empleados}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-3">Nombre</th>
                    <th scope="col" class="col-3">Apellido</th>
                    <th scope="col">Nro. DNI</th>
                    <th scope="col">Nro. Telefono</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Salario</th> <!-- Nueva columna para el salario -->
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each empleados}}
                <tr>
                    <td>{{nomemp}}</td>
                    <td>{{apeemp}}</td>
                    <td>{{nrodniemp}}</td>
                    <td>{{telemp}}</td>
                    <td>{{empdistrito}}</td>
                    <td>{{salario}}</td> <!-- Mostrar salario para cada empleado -->
                    <td>
                        <div class="">
                            <!-- Enlace para actualizar -->
                            <a href="/edit1/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>

                            <!-- Enlace para eliminar -->
                            <a href="/delete1/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="6">REGISTRO DE EMPLEADOS</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay empleados</h3>
            </div>
            <div class="card-body">
                <p>No hay empleados registrados actualmente.</p>
                
                <a href="/add1" class="btn btn-primary">Crear Empleado</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>

